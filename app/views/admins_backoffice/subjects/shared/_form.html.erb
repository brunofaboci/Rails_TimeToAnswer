<div class='row'>
  <div class='col-lg-12'>
    <h2 class='page-header'><%= action_message %></h2>
  </div>
</div>

<div class='row'>
  
  <% if @subject.errors.any? %>
    <div class='alert alert-danger alert-dismissable'>
      <button type='button' class='close' data-desmiss='alert' aria-hidden='true'>x</button>
      <ul>
        <% @subject.errors.full_messages.each do |message| %>
          <li> <%= message %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='col-lg-12'>
    <div class='panel panel-default'>
      <div class='panel-heading'>
        Subjects Information
      </div>
      <div class='panel-body'>
        <div class='row'>
          <div class='col-lg-6'>
            <%= form_with(model: [:admins_backoffice, @subject ], local: true) do |form| %>
              <div class='form-group'>
                <%= form.label :description %>
                <%= form.text_field :description, class:'form-control', placeholder:'Science' %>
              </div>
              <button type='submit' class='btn btn-primary'>
                Submit
              </button>
              <%= link_to admins_backoffice_subjects_path, class: 'btn btn-danger' do %>
							  Cancel
							<%end%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
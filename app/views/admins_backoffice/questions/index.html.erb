<div class='row'>
  <div class='col-lg-12'>
    <h1 class='page-header'>Questions</h1>
  </div>
</div>

<div class='table-responsive'>
	<table class='table table-stripe table-bordered table-hover'>
		<thead>
			<tr>
				<th><%= translate(@questions, :id) %></th>
				<th><%= translate(@questions, :description) %></th>
        <th><%= translate(@questions, :subject) %></th>
        <th>
          <%= link_to new_admins_backoffice_question_path, class:'btn btn-success btn-circle' do %>
            <i class='fa fa-plus'></i>
          <% end %>
        </th>
			</tr>
		</thead>
		<tbody>
			<% @questions.each do |question| %>
			<tr>
				<td><%= question.id %></td>
				<td><%= question.description.truncate(120) %></td>
        <td><%= question.subject.description.truncate(30) %></td>
				<td>
					<%= link_to edit_admins_backoffice_question_path(question), class:'btn btn-primary btn-circle' do %>
					<i class='fa fa-edit'></i>
          <% end %>
          <%= link_to admins_backoffice_question_path(question), method: :delete, class:'btn btn-danger btn-circle', data: {confirm: 'Are You Sure?'} do %>
					<i class='fa fa-minus'></i>
          <% end %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>

  <div class='text-center'>
    <%= paginate @questions %>
  </div>
  
  
  
</div>


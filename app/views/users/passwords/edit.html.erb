<div>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
         
          <h2>Change your password</h2>

          <%= f.hidden_field :reset_password_token %>

          <div>
            <%= f.label :password, "New password" %><br />
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-controle' %>
          </div>

          <div>
            <%= f.label :password_confirmation, "Confirm new password" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-controle' %>
          </div>

          <div class='container'>
            <div class="col-6 col-sm-6">
              <%= f.submit "Change my password", class:"btn btn-default submit" %>
            </div>
            <div class="col-6 col-sm-6">
              <%= render "users/shared/links" %>
            </div>
          </div>
        
          <div class="clearfix"></div>

          <div class="separator">
            <div class="clearfix"></div>
            <br />
            <div>
              <h1><i class="fa fa-laptop"></i> Time To Answer!</h1>
              <p>
                <%= link_to 'Home', site_welcome_index_path %>
              </p>
            </div>
          </div>

        <% end %>
      </section>
    </div>
  </div>
</div>

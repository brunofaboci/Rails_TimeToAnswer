<div>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
         
          <h2>Forgot your password?</h2>

          <div>
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: 'form-controle', placeholder: 'example@example.com' %>
          </div>

          <div class='container'>
            <div class="col-4 col-sm-4">
              <%= f.submit "Send me reset password instructions", class:"btn btn-default submit" %>
            </div>
            <br />
            <br />
            <div class="col-4 col-sm-4">
              <%= render "users/shared/links" %>
            </div>
          </div>
        
          <div class="clearfix"></div>

          <div class="separator">
            <div class="clearfix"></div>
            <br />
            <div>
              <h1><i class="fa fa-laptop"></i> Time To Answer!</h1>
              <p>
                <%= link_to 'Home', site_welcome_index_path %>
              </p>
            </div>
          </div>

        <% end %>
      </section>
    </div>
  </div>
</div>

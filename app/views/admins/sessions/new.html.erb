<div class="container">
  <div class="row justify-content-center">
    <div class="col-xl-8 col-lg-10 col-md-6">
      <div class='card o-hidden border-0 shadow-lg my-5'>
        <div class='card-body p-0'>
          <div class='col-lg-6 offset-3'>
            <div class="p-5">
              <div class="text-center">
                <h1 class="h1 text-gray-900 mb-4">Welcome Back!</h1>
              </div>
              
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:'user') do |f| %>
                  <div class="form-group">
                    <%= f.label :email %><br/>
                    <%= f.email_field :email, autofocus: true, placeholder: 'example@example.com', class:"form-control form-control-user" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :password %><br />
                    <%= f.password_field :password, class:"form-control form-control-user"  %>
                  </div>

                  <% if devise_mapping.rememberable? %>
                    <div class="form-group">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end %>

                  <%= f.submit "Log in", class:'btn btn-primary btn-user btn-block' %>
                  <%= link_to "Cancel", site_welcome_index_path, class:'btn btn-danger btn-user btn-block' %>
                  
                <% end %> </br>
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>